generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/notification-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id        String    @id @default(uuid())
  userId    String
  type      String
  title     String
  body      String?
  data      Json?
  readAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId, readAt, createdAt])
  @@map("notifications")
}
